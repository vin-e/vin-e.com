---
interface Props {
  location: 'topLeft' | 'bottomLeft' | 'topRight' | 'bottomRight';
}
const { location } = Astro.props;

const style = {
  topLeft: 'top: 10px; left: 10px;',
  topRight: 'top: 10px; right: 10px;',
  bottomLeft: 'bottom: 10px; left: 10px;',
  bottomRight: 'bottom: 10px; right: 10px;',
}[location];

const pseudoStyle = {
  topLeft: '--tm-before-height: 1px; --tm-before-top: 32px; --tm-before-left: 0; --tm-before-width: 50%; --tm-after-height: 50%; --tm-after-top: 0px; --tm-after-left: 32px; --tm-after-width: 1px;',
  topRight: '--tm-before-height: 1px; --tm-before-top: 32px; --tm-before-right: 0; --tm-before-width: 50%; --tm-after-height: 50%; --tm-after-top: 0px; --tm-after-right: 32px; --tm-after-width: 1px;',
  bottomLeft: '--tm-before-height: 1px; --tm-before-bottom: 32px; --tm-before-left: 0; --tm-before-width: 50%; --tm-after-height: 50%; --tm-after-bottom: 0px; --tm-after-left: 32px; --tm-after-width: 1px;',
  bottomRight: '--tm-before-height: 1px; --tm-before-bottom: 32px; --tm-before-right: 0; --tm-before-width: 50%; --tm-after-height: 50%; --tm-after-bottom: 0px; --tm-after-right: 32px; --tm-after-width: 1px;',
}[location];

---

<div class="trim-mark" style={style + pseudoStyle} />

<style>
  .trim-mark {
    position: absolute;
    height: 32px;
    width: 32px;
    z-index: -1;

    &::before {
      background-color: black;
      content: '';
      position: absolute;

      bottom: var(--tm-before-bottom);
      height: var(--tm-before-height);
      left: var(--tm-before-left);
      right: var(--tm-before-right);
      top: var(--tm-before-top);
      width: var(--tm-before-width);
    }

    &::after {
      background-color: black;
      content: '';
      position: absolute;

      bottom: var(--tm-after-bottom);
      height: var(--tm-after-height);
      left: var(--tm-after-left);
      right: var(--tm-after-right);
      top: var(--tm-after-top);
      width: var(--tm-after-width);
    }
  }
</style>